# bool1.qk
# Booleans
include io

func print_bool(x:bool)
	if (x == true)
		println("true")
	elif (x == false)
		println("false")
	end
end

func bool_loop()
	bool is_done = false
	int index = 0
	
	while (is_done == false)
		if (index == 10)
			is_done = true
		end
		
		print_int("", index)
		index = index + 1
	end
	
	println("Done")
end

func main
	bool x = true
	bool y = false
	
	print_int("", x)
	print_int("", y)
	println("")
	
	print_bool(x)
	print_bool(y)
	println("")
	
	bool_loop()
end
